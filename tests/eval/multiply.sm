// Regression test

//@ multiply(10, 5, false) == multiply(10, 5, true)

// This function shouldn't affect `multiply`.
fn noop() {
    var n = 2;return 0;
}

fn multiply(number: int, n: int, add: bool) -> int {
    if add {
        var acc = 0;
        while n > 0 {
            acc = acc + number;
            n = n - 1;
        }
        return acc;
    } else {
        noop();
        return number * n;
    }
}
